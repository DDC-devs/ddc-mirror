
import	Base

infixl 0 #= 
foreign import "primRefUpdate"
	(#=)
		:: forall a %r1
		.  Ref %r1 a -> a -(!e1)> ()
		:- Mutable %r1
		,  !e1 = !Write %r1
		:$ Obj -> Obj -> Obj;


type Ref :: % -> * -> *

-- Create a mutable reference to some object
--	This isn't a pull-back reference of anything else.
ref	:: forall a %r1. a -> Ref %r1 a
	:- Mutable %r1; 
ref x 	= Ref x




 

