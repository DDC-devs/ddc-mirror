
module Data.Numeric.Bool
export  { showBool
        ; not; and; or }
import Data.Text
where

-- | Convert a Bool to a String.
showBool (x : Bool#) : Text
 = if x then "True" 
        else "False"


-- | Boolean NOT.
not (x : Bool#)   : Bool#
 = if x then False  
        else True


-- | Boolean AND.
and (x y : Bool#) : Bool#
 = if x then y 
        else False


-- | Boolean OR.
or (x y : Bool#) : Bool#
 = if x then True 
        else y


