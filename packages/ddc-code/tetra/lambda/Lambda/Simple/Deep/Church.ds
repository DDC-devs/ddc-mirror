
module Lambda.Simple.Deep.Church
export 
{       xNat;
        xPlus 
}
import Lambda.Simple.Core.Exp
import Lambda.Simple.Deep.Exp
where


-- | Build the Church encoding of a natural number.
xNat (n: Nat): Exp p
 = abs "s" $ abs "z"
 $ iterate (app (var "s")) (var "z") n


-- | Church encoded addition of natural numbers.
xPlus: Exp p
 = abs "m" $ abs "n" $ abs "s" $ abs "z"
 $ app  (app (var "m") (var "s"))
        (app (app (var "n") (var "s")) (var "z"))
