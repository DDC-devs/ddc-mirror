
module Lambda.Simple.Core.Decl
export  
{       lookupDecl } 
import Data.List
where

-- | Top-level declaration.
data Decl (p: Data) where
        DTerm   : Name -> Exp p -> Decl p


lookupDecl
        (n: Name)
        (decls: List (Decl p))
        : Maybe (Exp p)
 = case decls of
        Nil             -> Nothing

        Cons (DTerm n' x) ds
         | n == n'      -> Just x
         | otherwise    -> lookupDecl n ds
