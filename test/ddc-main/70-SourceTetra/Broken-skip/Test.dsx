
:to-salt..
module Test where

data Bool where
        True  : Bool
        False : Bool

neg (x : Bool) : Bool
 = case x of
        True    -> False
        False   -> True
;;


-- Error: data constructor reused in a different data type.
:to-core..
module Test where

data Blerk where
        Foo     : Blerk
        Bar     : Blerk

data Blerk2 where
        Foo     : Blerk2
        Bar     : Blerk2

foo (x : Blerk) : Blerk
 = case x of
        Foo     -> Bar
        Bar     -> Foo
;;


-- Polymorphically take the head of a list, where the element
-- has its own primary region annotation. In the Salt code the head
-- function is passed the top level region as the location of the element.
:to-salt..
module Test where
data List (a : Data) where
        Cons    : a -> List a -> List a
        Nil     : List a

data Blerk (r : Region) where
        Hot     : Blerk r
        Cold    : Blerk r

head (def : a) (xx : List a) : a
 = case xx of
        Cons x _        -> x
        _               -> def

foo  (_ : Unit) : Blerk r
 = head Hot (Cons Cold Nil)
;;
