:set Synth
:set SuppressLetTypes


-- Pack with an existing series of flags.
:flow-lower..
module Test with letrec
packMe  [k0 : Rate] [a : Data]
        (s  : Series# k0 a) 
        (v  : Vector# a)
        (flags : Series# k0 Bool#)
        : Process#

 =      smkSel1# flags
         (/\(k1 : Rate). \(sel : Sel1# k0 k1).
          let s2       = spack# sel s
          in  sfill# v s2)
;;


-- Filter, producing our own flags.
:flow-lower..
module Test with letrec
filter  [k0 : Rate] [a : Data]
        (f  : a -> Bool#) 
        (v  : Vector# a)
        (s  : Series# k0 a)
        : Process#
 = do   
        flags   = smap# f s

        smkSel1# flags
         (/\(k1 : Rate). \(sel : Sel1# k0 k1).
          let  s2      =  spack# sel s
          in   sfill# v s2)
;;


-- Filter, and also materialize the input in a new selector context.
:flow-lower..
module Test with letrec
filter  [k0 : Rate] [a : Data]
        (f  : a -> Bool#) 
        (v1 v2 : Vector# a)
        (s : Series# k0 a)
        : Process#
 = do   
        flags   = smap# f s

        pjoin#  (sfill# v1 s)
                (smkSel1# flags
                 (/\(k1 : Rate). \(sel : Sel1# k0 k1).
                  let  s2  = spack# sel s
                  in   sfill# v1 s2))
;;


-- Nested filter.
-- Ensure we can handle nested selector contexts.
:flow-lower..
module Test with letrec
filter  [k0 : Rate] [a : Data]
        (f  : a -> Bool#)  (g : a -> Bool#)
        (v  : Vector# a)
        (s0 : Series# k0 a)
        : Process#
 = do   
        flags1  = smap# (\(x : a). f x) s0

        smkSel1# flags1
         (/\(k1 : Rate). \(sel1 : Sel1# k0 k1).
          let  s1      = spack# sel1 s0 in
          let  flags2  = smap#  g s1 
          in   smkSel1# flags2
                 (/\(k2 : Rate). \(sel2 : Sel1# k1 k2).
                  let   s2 = spack# sel2 s1
                  in    sfill# v s2 ))
;;


-- Sequential filter.
-- Ensure we can handle two selector contexts on the same input.
:flow-lower..
module Test with letrec
filter  [k0 : Rate] [a : Data]
        (f  : a -> Bool#)  (g : a -> Bool#)
        (v1 v2 : Vector# a) 
        (s0 : Series# k0 a)
        : Process#
 = do   
        flags1  = smap# f s0
        flags2  = smap# f s0

        pjoin#  (smkSel# flags1
                 (/\(k1 : Rate). \(sel1 : Sel1# k0 k1).
                  let  s1      = spack# sel1 s0 
                  in   sfill# v1 s1))

                (smkSel# flags2
                 (/\(k2 : Rate). \(sel2 : Sel1# k0 k2).
                  let   s2      = spack# sel2 s0
                  in    sfill# v2 s2))
;;

