
-- Multiply two series.
:flow-lower..
module Test with letrec
test    [k : Rate] 
        (v  : Vector# Float32#)
        (s1 : Series# k Float32#) (s2 : Series# k Float32#) 
        : Unit
 = do   
        s2      = map2# [k] [Float32#] [Float32#] [Float32#] 
                        (mul# [Float32#]) s1 s2

        fill# [k] [Float32#] v s2
;;


-- Multiply by constant, lifting replicates constant.
:flow-lower..
module Test with letrec
test    [k : Rate] 
        (v  : Vector# Float32#)
        (s1 : Series# k Float32#) (s2 : Series# k Float32#) 
        : Unit
 = do   
        s2      = map2# [k] [Float32#] [Float32#] [Float32#] 
                        (mul# [Float32#]) s1 s2

        s3      = map#  [k] [Float32#] [Float32#]
                        (add# [Float32#] 2.0f32#) s2

        fill# [k] [Float32#] v s3
;;


-- Gather from vector.
:flow-lower..
module Test with letrec
test    [k : Rate] 
        (v1 : Vector# Float32#)   (v2 : Vector# Float32#)
        (s1 : Series# k Nat#)
        : Unit
 = do   
        s2      = gather# [k] [Float32#] v1 s1

        s3      = map#  [k] [Float32#] [Float32#]
                        (add# [Float32#] 2.0f32#) s2

        fill# [k] [Float32#] v2 s3
;;


-- Scatter into vector.
:flow-lower..
module Test with letrec
test    [k : Rate]
        (v1 : Vector# Float32#)
        (s1 : Series# k Nat#)   (s2 : Series# k Float32#)
        : Unit
 = do   
        s3      = map#  [k] [Float32#] [Float32#]
                        (add# [Float32#] 2.0f32#) s2

        scatter# [k] [Float32#] v1 s1 s3
;;


-- Sum the elements of a vector.
:flow-lower..
module Test with letrec
test    [k : Rate]
        (x1 : Ref# Float32#) (s1 : Series# k Float32#)
        : Unit
 =      reduce#  [k] [Float32#] x1 (add# [Float32#]) 0.0f32# s1
;;


-- Fuse gather, map and reduce in one.
:flow-lower..
module Test with letrec
test    [k : Rate] 
        (x1  : Ref# Float32#)
        (v1 : Vector# Float32#)
        (s1 : Series# k Nat#)
        : Unit
 = do   
        s2      = gather# [k] [Float32#] v1 s1

        s3      = map#  [k] [Float32#] [Float32#]
                        (mul# [Float32#] 2.0f32#) s2

        reduce# [k] [Float32#] x1 (add# [Float32#]) 0.0f32# s3
;;


-- Dot product.
:flow-lower..
module Test with letrec
test    [k  : Rate] 
        (x1 : Ref# Float32#)
        (s1 : Series# k Float32#) (s2 : Series# k Float32#)
        : Unit
 = do   
        s3      = map2# [k] [Float32#] [Float32#] [Float32#]
                        (mul# [Float32#]) s1 s2

        reduce# [k] [Float32#] x1 (add# [Float32#]) 0.0f32# s3
;;


-- Fuse sum and product.
:flow-lower..
module Test with letrec
test    [k  : Rate] 
        (x1 : Ref# Float32#)      (x2 : Ref# Float32#)
        (s1 : Series# k Float32#)
        : Unit
 = do   
        reduce# [k] [Float32#] x1 (add# [Float32#]) 0.0f32# s1
        reduce# [k] [Float32#] x2 (mul# [Float32#]) 1.0f32# s1
;;


-- Fuse sum and dot product.
:flow-lower..
module Test with letrec
test    [k  : Rate] 
        (x1 : Ref# Float32#)      (x2 : Ref# Float32#)
        (s1 : Series# k Float32#) (s2 : Series# k Float32#)
        : Unit
 = do   
        s3      = map2# [k] [Float32#] [Float32#] [Float32#]
                        (mul# [Float32#]) s1 s2

        reduce# [k] [Float32#] x1 (add# [Float32#]) 0.0f32# s3
        
        reduce# [k] [Float32#] x2 (add# [Float32#]) 0.0f32# s1
;;
