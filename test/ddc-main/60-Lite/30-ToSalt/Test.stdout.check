-- Construct a singleton list,
--      packs a Boxed object.
module Test with
letrec {
  singleton : [r1 r2 : %].Ptr# r2 Obj -> Ptr# r1 Obj
    = /\(r1 r2 : %).
       \(x : Ptr# r2 Obj).
      let x1 : Ptr# r1 Obj = allocBoxed [r1] TAG0# 1# in
      let x2 : Ptr# rT Obj = allocBoxed [rT] TAG0# 0# in
      let _ : Void#
            = setFieldOfBoxed [r1] [Ptr# rT Obj] x1 0# x2 in
      let x0 : Ptr# r1 Obj = x1 in
      let x3 : Ptr# r1 Obj = allocBoxed [r1] TAG1# 2# in
      let _ : Void#
            = setFieldOfBoxed [r1] [Ptr# r2 Obj] x3 0# x in
      let _ : Void#
            = setFieldOfBoxed [r1] [Ptr# r1 Obj] x3 1# x0 in
      x3
}


-- Full application.
module Test with
letrec {
  addInt : [r1 r2 r3 : %].Ptr# r1 Obj -> Ptr# r2 Obj -> Ptr# r3 Obj
    = /\(r1 r2 r3 : %).
       \(x : Ptr# r1 Obj).\(y : Ptr# r2 Obj).
      let x1 : Tag# = getTag [r1] x in
      case x1 of {
        TAG0#  
         -> let x2 : Ptr# r1 Word8# = payloadOfRawSmall [r1] x in
            let x3 : Ptr# r1 Int# = castPtr# [r1] [Int#] [Word8#] x2 in
            let i1 : Int# = peek# [r1] [Int#] x3 0# in
            let x4 : Tag# = getTag [r2] y in
            case x4 of {
              TAG0#  
               -> let x5 : Ptr# r2 Word8# = payloadOfRawSmall [r2] y in
                  let x6 : Ptr# r2 Int# = castPtr# [r2] [Int#] [Word8#] x5 in
                  let i2 : Int# = peek# [r2] [Int#] x6 0# in
                  let x0 : Int# = add# [Int#] i1 i2 in
                  let x7 : Ptr# r3 Obj = allocRawSmall [r3] TAG0# 8# in
                  let x8 : Ptr# r3 Word8# = payloadOfRawSmall [r3] x7 in
                  let x9 : Ptr# r3 Int# = castPtr# [r3] [Int#] [Word8#] x8 in
                  let _ : Void# = poke# [r3] [Int#] x9 0# x0 in
                  x7;
              _ 
               -> fail# [Ptr# r3 Obj]
            };
        _ 
         -> fail# [Ptr# r3 Obj]
      };
  
  double : [r1 r2 : %].Ptr# r1 Obj -> Ptr# r2 Obj
    = /\(r1 r2 : %).
       \(x : Ptr# r1 Obj). addInt [r1] [r1] [r2] x x
}


