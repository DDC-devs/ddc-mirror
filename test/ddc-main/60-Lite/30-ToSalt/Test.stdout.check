    = /\(r1 r2 r3 : Region).
       \(x : Ptr# r1 Obj).\(y : Ptr# r2 Obj).
      case getTag [r1] x of {
        TAG0#  
         -> let ^ : Ptr# r1 Word8# = payloadOfRawSmall [r1] x in
            let i1 : Int#
                  = peek# [r1] [Int#] (castPtr# [r1] [Int#] [Word8#] ^0) 0# in
            case getTag [r2] y of {
              TAG0#  
