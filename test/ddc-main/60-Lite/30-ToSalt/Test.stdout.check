-- Integer boxing,
--      packs a RawSmall Object.
module Test with
letrec {
  boxInt : [r : %].Int# -> Ptr# r Obj
    = /\(r : %).
       \(i : Int#).
      let x0 : Ptr# r Obj = allocRawSmall [r] TAG0# 8# in
      let x1 : Ptr# r Word8# = payloadOfRawSmall [r] x0 in
      let x2 : Ptr# r Int# = castPtr# [r] [Int#] [Word8#] x1 in
      let _ : Void# = poke# [r] [Int#] x2 0# i in
      x0
}


-- Integer unboxing,
--      unpacks a RawSmall Object.
module Test with
letrec {
  unboxInt : [r : %].Ptr# r Obj -> Int#
    = /\(r : %).
       \(x : Ptr# r Obj).
      let x0 : Tag# = getTag [r] x in
      case x0 of {
        TAG0#  
         -> let x1 : Ptr# r Word8# = payloadOfRawSmall [r] x in
            let x2 : Ptr# r Int# = castPtr# [r] [Int#] [Word8#] x1 in
            let i : Int# = peek# [r] [Int#] x2 0# in
            i;
        _ 
         -> fail# [Int#]
      }
}


-- Nested case-expressions.
module Test with
letrec {
  addInt : [r1 r2 r3 : %].Ptr# r1 Obj -> Ptr# r2 Obj -> Int#
    = /\(r1 r2 r3 : %).
       \(x : Ptr# r1 Obj).\(y : Ptr# r2 Obj).
      let x0 : Tag# = getTag [r1] x in
      case x0 of {
        TAG0#  
         -> let x1 : Ptr# r1 Word8# = payloadOfRawSmall [r1] x in
            let x2 : Ptr# r1 Int# = castPtr# [r1] [Int#] [Word8#] x1 in
            let i1 : Int# = peek# [r1] [Int#] x2 0# in
            let x3 : Tag# = getTag [r2] y in
            case x3 of {
              TAG0#  
               -> let x4 : Ptr# r2 Word8# = payloadOfRawSmall [r2] y in
                  let x5 : Ptr# r2 Int# = castPtr# [r2] [Int#] [Word8#] x4 in
                  let i2 : Int# = peek# [r2] [Int#] x5 0# in
                  add# [Int#] i1 i2;
              _ 
               -> fail# [Int#]
            };
        _ 
         -> fail# [Int#]
      }
}


-- Boxed addition
module Test with
letrec {
  addInt : [r1 r2 r3 : %].Ptr# r1 Obj -> Ptr# r2 Obj -> Ptr# r3 Obj
    = /\(r1 r2 r3 : %).
       \(x : Ptr# r1 Obj).\(y : Ptr# r2 Obj).
      let x1 : Tag# = getTag [r1] x in
      case x1 of {
        TAG0#  
         -> let x2 : Ptr# r1 Word8# = payloadOfRawSmall [r1] x in
            let x3 : Ptr# r1 Int# = castPtr# [r1] [Int#] [Word8#] x2 in
            let i1 : Int# = peek# [r1] [Int#] x3 0# in
            let x4 : Tag# = getTag [r2] y in
            case x4 of {
              TAG0#  
               -> let x5 : Ptr# r2 Word8# = payloadOfRawSmall [r2] y in
                  let x6 : Ptr# r2 Int# = castPtr# [r2] [Int#] [Word8#] x5 in
                  let i2 : Int# = peek# [r2] [Int#] x6 0# in
                  let x0 : Int# = add# [Int#] i1 i2 in
                  let x7 : Ptr# r3 Obj = allocRawSmall [r3] TAG0# 8# in
                  let x8 : Ptr# r3 Word8# = payloadOfRawSmall [r3] x7 in
                  let x9 : Ptr# r3 Int# = castPtr# [r3] [Int#] [Word8#] x8 in
                  let _ : Void# = poke# [r3] [Int#] x9 0# x0 in
                  x7;
              _ 
               -> fail# [Ptr# r3 Obj]
            };
        _ 
         -> fail# [Ptr# r3 Obj]
      }
}


-- Take the head of an Int list,
--      unpacks a Boxed object.
module Test with
letrec {
  head : [r : %].Ptr# r Obj -> Ptr# r Obj -> Ptr# r Obj
    = /\(r : %).
       \(def xs : Ptr# r Obj).
      let x0 : Tag# = getTag [r] xs in
      case x0 of {
        TAG1#  
         -> let x : Ptr# r Obj
                  = getFieldOfBoxed [r] [Ptr# r Obj] xs 0# in
            let xs' : Ptr# r Obj
                  = getFieldOfBoxed [r] [Ptr# r Obj] xs 1# in
            x;
        _ 
         -> def
      }
}


