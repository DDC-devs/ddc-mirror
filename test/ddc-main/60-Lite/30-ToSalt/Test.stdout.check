-- Take the head of an Int list,
--      unpacks a Boxed object.
module Test with
letrec {
  head : [r : Region].Ptr# r Obj -> Ptr# r Obj -> Ptr# r Obj
    = /\(r : Region).
       \(def xs : Ptr# r Obj).
      case getTag [r] xs of {
        TAG1#  
         -> let x : Ptr# r Obj
                  = getFieldOfBoxed [r] [Ptr# r Obj] xs 0# in
            let xs' : Ptr# r Obj
                  = getFieldOfBoxed [r] [Ptr# r Obj] xs 1# in
            x;
        _ 
         -> def
      }
}


