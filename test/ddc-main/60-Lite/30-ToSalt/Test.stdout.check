--      packs a Boxed object.
module Test with
letrec {
  singleton : [r1 r2 : Region].Ptr# r2 Obj -> Ptr# r1 Obj
    = /\(r1 r2 : Region).
       \(x : Ptr# r2 Obj).
      let x0 : Ptr# r1 Obj
