-- Destruct a list of units.
-- The head field of the Cons cell has no primary region.
module Test with
letrec {
  headUnit : [r1 : %].Ptr# r1 Obj -> Ptr# rT Obj
    = /\(r1 : %).
       \(xx : Ptr# r1 Obj).
      let x0 : Tag# = getTag [r1] xx in
      case x0 of {
        TAG1#  
         -> let x : Ptr# rT Obj
                  = getFieldOfBoxed [r1] [Ptr# rT Obj] xx 0# in
            x;
        TAG0#  
         -> allocBoxed [rT] TAG0# 0#;
        _ 
         -> fail# [Ptr# rT Obj]
      }
}


-- Construct a singleton unit list and take its head.
module Test with
letrec {
  singleton : [r1 : %].Ptr# rT Obj -> Ptr# r1 Obj
    = /\(r1 : %).
       \(x : Ptr# rT Obj).
      let x1 : Ptr# r1 Obj = allocBoxed [r1] TAG0# 1# in
      let x2 : Ptr# rT Obj = allocBoxed [rT] TAG0# 0# in
      let _ : Void#
            = setFieldOfBoxed [r1] [Ptr# rT Obj] x1 0# x2 in
      let x0 : Ptr# r1 Obj = x1 in
      let x3 : Ptr# r1 Obj = allocBoxed [r1] TAG1# 2# in
      let _ : Void#
            = setFieldOfBoxed [r1] [Ptr# rT Obj] x3 0# x in
      let _ : Void#
            = setFieldOfBoxed [r1] [Ptr# r1 Obj] x3 1# x0 in
      x3;
  
  headUnit : [r1 : %].Ptr# r1 Obj -> Ptr# rT Obj
    = /\(r1 : %).
       \(xx : Ptr# r1 Obj).
      let x4 : Tag# = getTag [r1] xx in
      case x4 of {
        TAG1#  
         -> let x : Ptr# rT Obj
                  = getFieldOfBoxed [r1] [Ptr# rT Obj] xx 0# in
            x;
        TAG0#  
         -> allocBoxed [rT] TAG0# 0#;
        _ 
         -> fail# [Ptr# rT Obj]
      };
  
  foo : Ptr# rT Obj -> Ptr# rT Obj
    = \(_ : Ptr# rT Obj).
      letregion r in
      let x5 : Ptr# rT Obj = allocBoxed [rT] TAG0# 0# in
      let list : Ptr# r Obj = singleton [r] x5 in
      headUnit [r] list
}


