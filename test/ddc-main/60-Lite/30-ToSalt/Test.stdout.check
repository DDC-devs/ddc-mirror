-- Keep witnesses applications
module Test with
letrec {
  foo : [r1 r2 r3 : %].Mutable r1 => Distinct2 r2 r3 => Ptr# rT Obj -> Word64#
    = /\(r1 r2 r3 : %).
       \(w1 : Mutable r1).\(w2 : Distinct2 r2 r3).\(x : Ptr# rT Obj). 42w64#;
  
  bar : Ptr# rT Obj -> Word64#
    = \(_ : Ptr# rT Obj).
      letregion r1 with {w1 : Mutable r1} in
      letregion r2 in
      letregion r3 with {w2 : Distinct2 r2 r3} in
      let x0 : Ptr# rT Obj = allocBoxed [rT] TAG0# 0# in
      foo [r1] [r2] [r3] <w1> <w2> x0
}


