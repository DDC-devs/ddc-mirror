:set Indent

-- use 'x' once at each level
:set rule add0r [x : Region] (x : Int x). addInt [:x x x:] x (0 [x] ()) = x

:set trans Rewrite

-- rewrite
:trans addInt [:r0# r0# r0#:] (5 [r0#] ()) (0 [r0#] ())

-- don't rewrite; different regions
:trans addInt [:r0# r0# r1#:] (5 [r0#] ()) (0 [r0#] ())

