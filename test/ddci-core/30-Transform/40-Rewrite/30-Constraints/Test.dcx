:set Indent
:set trans Rewrite

:set rule copyConst [r1:%] (x:Int r1). Const r1 => copyInt [:r1 r1:] x = x

:set rule

-- don't do for any region
:trans..
letregion r in
(\(x : Int r). ())
    (copyInt [:r r:] (23 [r] ()))
;;

-- do it for consts
:trans..
letregion r with {w : Const r} in
(\(x : Int r). ())
    (copyInt [:r r:] (23 [r] ()))
;;

-- do it
:trans..
letregion ^ with {w : Const ^0} in
(\(x : Int ^0). ())
	(copyInt [:^0 ^0:] (23 [^0] ()))
;;

-- lift de bruijns: don't do it
:trans..
letregion ^ with {w : Const ^0} in
letregion ^ in
(\(x : Int ^0). ())
	(copyInt [:^0 ^0:] (23 [^0] ()))
;;

-- lift de bruijns: do it
:trans..
letregion ^ with {w : Const ^0} in
letregion ^ in
(\(x : Int ^1). ())
	(copyInt [:^1 ^1:] (23 [^1] ()))
;;

