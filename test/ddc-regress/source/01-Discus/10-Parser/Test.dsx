-- Check character literal excaping.
:parse..
module Test where
foo (_ : Unit): Unit
 = do   c1       = '\n'
        c2       = '\''
        c3       = '\\'
        ()
;;


-- Check parsing of match expressions.
:parse..
module Test where
derp (b: Unit)
 = match { | True <- b = False; | False <- b = True; }
;;


-- Check offside rule handles alts on a single line.
:parse..
module Test where
derp (b: Unit)
 = match
        | True  <- b = False
        | False <- b = True
;;


-- Check offside rule handles alts where result start in same column
-- as the bar that arts the alt.
:parse..
module Test where
derp (b: Unit)
 = match
        | True  <- b
        = False
        | False <- b
        = True
;;


-- Check offside rule binds match alts more tightly than guard alts.
:parse..
module Test where
derp (b: Bool)
 | b
 = match
        | True  <- b
        = False
        | False <- b
        = True
 | otherwise
 = match
        | True  <- b
        = True
        | False <- b
        = False
;;


-- Check offside rule handles nested match expressions.
:parse..
module Test where
derp (b1: Bool) (b2: Bool)
 = match
        | True  <- b1
        = match
                | True <- b2
                = True
                | False <- b2
                = False
        | False <- b1
        = match | True <- b2
                = False
                | False <- b2
                = True
;;

